<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">
    <!--允许应用程序改变网络状态-->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>


    <!--允许应用程序改变WIFI连接状态-->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>

    <!--允许应用程序访问有关的网络信息-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!--允许应用程序访问WIFI网卡的网络信息-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <!--允许应用程序完全使用网络-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">

        <activity
            android:name=".FragmentMain"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="Back"
            android:name=".Activity.CameraActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.MainActivity"></meta-data>
        </activity>
        <activity
            android:name="com.example.myapplication.Activity.ShowQRCodeActivity"/>
        <activity
            android:name="com.example.myapplication.Activity.MainActivity"/>
        <activity
            android:name="com.example.myapplication.Activity.SysActivity"/>
        <activity
            android:name="com.example.myapplication.Activity.NetActivity"/>
        <activity
            android:label="Back"
            android:name="com.example.myapplication.Activity.TriggerModeActivity"/>
        <activity
            android:name="com.example.myapplication.Activity.WorkTimeActivity"/>
        <activity
            android:name="com.example.myapplication.com.example.myapplication.activity.ConnectScoket"/>
        <activity
            android:name="com.example.myapplication.ConnectSetting"/>
        <activity
            android:name="com.example.myapplication.Activity.SimInfoActivity"/>

    </application>
