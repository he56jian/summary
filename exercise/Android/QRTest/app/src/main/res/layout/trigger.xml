<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PIR Sensitivity:" />
        <Spinner
            android:id="@+id/spinner_triggerSen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trigger PIR:" />
        <Spinner
            android:id="@+id/spinner_triggerPir"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trigger Timelapse:" />
        <Spinner
            android:id="@+id/spinner_triggerTimeLapse"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/button_worktime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work time"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_worktime1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10:00-20:00" />

            <TextView
                android:id="@+id/textview_worktime2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10:00-20:00" />

            <TextView
                android:id="@+id/textview_worktime3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10:00-20:00" />

            <TextView
                android:id="@+id/textview_worktime4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10:00-20:00" />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/button_trigger_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save"
        ></Button>

</LinearLayout>